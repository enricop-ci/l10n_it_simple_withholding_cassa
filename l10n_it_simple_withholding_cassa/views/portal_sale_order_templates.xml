<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Estensione vista portale Fatture -->
    <template id="portal_invoice_inherit" inherit_id="account.portal_invoice_page" priority="20">
        <xpath expr="//div[@id='invoice_content']//table[@class='table table-sm']" position="after">
            <div class="table-responsive mt-3">
                <table class="table table-borderless">
                    <tbody>
                        <tr t-if="invoice.apply_cassa">
                            <th scope="row">Cassa Previdenziale</th>
                            <td>
                                <span t-esc="invoice.cassa_amount"
                                      t-options="{'widget': 'monetary', 'display_currency': invoice.currency_id}" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Totale lordo</th>
                            <td>
                                <span t-esc="invoice.total_gross"
                                      t-options="{'widget': 'monetary', 'display_currency': invoice.currency_id}" />
                            </td>
                        </tr>
                        <tr t-if="invoice.apply_withholding">
                            <th scope="row">Ritenuta d'acconto</th>
                            <td>
                                <span t-esc="invoice.withholding_amount"
                                      t-options="{'widget': 'monetary', 'display_currency': invoice.currency_id}" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Netto a pagare</th>
                            <td>
                                <span t-esc="invoice.net_amount"
                                      t-options="{'widget': 'monetary', 'display_currency': invoice.currency_id}" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </xpath>
    </template>

    <!-- Estensione vista portale Preventivi -->
    <template id="portal_sale_inherit" inherit_id="sale.portal_my_quotations" priority="20">
        <xpath expr="//div[@id='quotation_content']//table[@class='table table-sm']" position="after">
            <div class="table-responsive mt-3">
                <table class="table table-borderless">
                    <tbody>
                        <tr t-if="sale_order.apply_cassa">
                            <th scope="row">Cassa Previdenziale</th>
                            <td>
                                <span t-esc="sale_order.cassa_amount"
                                      t-options="{'widget': 'monetary', 'display_currency': sale_order.currency_id}" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Totale lordo</th>
                            <td>
                                <span t-esc="sale_order.total_gross"
                                      t-options="{'widget': 'monetary', 'display_currency': sale_order.currency_id}" />
                            </td>
                        </tr>
                        <tr t-if="sale_order.apply_withholding">
                            <th scope="row">Ritenuta d'acconto</th>
                            <td>
                                <span t-esc="sale_order.withholding_amount"
                                      t-options="{'widget': 'monetary', 'display_currency': sale_order.currency_id}" />
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Netto a pagare</th>
                            <td>
                                <span t-esc="sale_order.net_amount"
                                      t-options="{'widget': 'monetary', 'display_currency': sale_order.currency_id}" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </xpath>
    </template>

    <!-- Estensione vista portale Abbonamenti - CORRETTA PER ODOO 18 -->
    <template id="portal_subscription_inherit" inherit_id="sale_subscription.subscription_portal_content" priority="20">
        <xpath expr="//section[@id='details']//table[hasclass('table')]" position="after">
            <div class="table-responsive mt-3">
                <h4>Dettagli Fiscali</h4>
                <table class="table table-borderless">
                    <tbody>
                        <tr t-if="subscription.apply_cassa">
                            <th scope="row">Cassa Previdenziale (<span t-esc="subscription.cassa_percent"/>%)</th>
                            <td>
                                <span t-esc="subscription.cassa_amount"
                                      t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Imponibile</th>
                            <td>
                                <span t-esc="subscription.amount_untaxed"
                                      t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">IVA 22%</th>
                            <td>
                                <span t-esc="subscription.amount_tax"
                                      t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Totale Documento</th>
                            <td>
                                <span t-esc="subscription.total_gross"
                                      t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'/>
                            </td>
                        </tr>
                        <tr t-if="subscription.apply_withholding">
                            <th scope="row">Ritenuta d'acconto (<span t-esc="subscription.withholding_percent"/>%)</th>
                            <td class="text-danger">
                                -<span t-esc="subscription.withholding_amount"
                                      t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'/>
                            </td>
                        </tr>
                        <tr class="border-top">
                            <th scope="row"><strong>Netto a Pagare</strong></th>
                            <td>
                                <strong><span t-esc="subscription.net_amount"
                                      t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'/></strong>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </xpath>
    </template>

    <!-- Template alternativo per abbonamenti se il primo non funziona -->
    <template id="portal_subscription_inherit_alt" inherit_id="sale_subscription.subscription_portal_content" priority="21" active="False">
        <xpath expr="//div[@class='o_portal_content']" position="append">
            <div class="row mt-4" t-if="subscription.apply_cassa or subscription.apply_withholding">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Dettagli Fiscali Abbonamento</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-sm">
                                <tr t-if="subscription.apply_cassa">
                                    <td>Cassa Previdenziale:</td>
                                    <td class="text-end">
                                        <span t-esc="subscription.cassa_amount"
                                              t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Totale Lordo:</td>
                                    <td class="text-end">
                                        <span t-esc="subscription.total_gross"
                                              t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'/>
                                    </td>
                                </tr>
                                <tr t-if="subscription.apply_withholding">
                                    <td>Ritenuta d'acconto:</td>
                                    <td class="text-end text-danger">
                                        -<span t-esc="subscription.withholding_amount"
                                              t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'/>
                                    </td>
                                </tr>
                                <tr class="border-top fw-bold">
                                    <td>Netto a Pagare:</td>
                                    <td class="text-end">
                                        <span t-esc="subscription.net_amount"
                                              t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>