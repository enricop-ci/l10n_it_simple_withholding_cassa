<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_invoice_bank_details" inherit_id="account.report_invoice_document">
        <xpath expr="//table[contains(@class, 'custom-total-table')]" position="after">
            <div class="row mt-4" style="width: 90%; margin-left:auto; margin-right:0;">
                <div class="col-12">
                    <div class="border-top pt-3">
                        <strong>Pagamento tramite bonifico bancario</strong>
                        <div class="mt-2">
                            <strong>Beneficiario:</strong> <span t-field="o.company_id.name"/>
                        </div>
                        <t t-foreach="o.company_id.bank_ids" t-as="bank">
                            <div class="mt-1">
                                <div><strong>Banca:</strong> <span t-field="bank.bank_id.name"/></div>
                                <div><strong>IBAN:</strong> <span t-field="bank.acc_number"/></div>
                                <t t-if="bank.bank_id.bic">
                                    <div><strong>BIC/SWIFT:</strong> <span t-field="bank.bank_id.bic"/></div>
                                </t>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>